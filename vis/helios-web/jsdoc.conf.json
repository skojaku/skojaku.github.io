{
    "plugins": [
        "node_modules/jsdoc-typeof-plugin",
        "node_modules/better-docs/category"
    ],
    "opts": {
        "template": "./node_modules/better-docs",
        "encoding": "utf8",
        "destination": "docs/api",
        "recurse": true,
        "verbose": true
      },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "search": true,
        "default":{
            "staticFiles": {
                "include": [
                    "./docstyle.css",
                    "./media/WS_very_low.gif",
                    "./media/helios-web-logo.svg"
                ]
            }
        },
        "better-docs": {
            "name": "",
            "title": "Documentation", 
            "logo": "helios-web-logo.svg",
            "css": "docstyle.css",
	    "hideGenerator": false,
            "navLinks": [
                {
                    "label": "Github",
                    "href": "https://github.com/filipinascimento/helios-web"
                },
                {
                    "label": "Example",
                    "href": "https://filipinascimento.github.io/software/heliosweb/"
                }
            ]
        }
    }
}
